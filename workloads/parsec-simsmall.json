{
    "name": "parsec-simsmall",
    "base": "parsec.json",
    "workdir": "common",
    "guest-init": "prepareGuest.sh /opt/parsec --suite parsec --input simsmall",
    "rootfs-size": "0",
	"outputs": [  "/opt/parsec/output" ],
    "jobs": [
        {
            "name": "blackscholes",
            "guest-init": "prepareGuest.sh /opt/parsec --wrapper time --wrapper pmapelf --input simsmall -- blackscholes",
            "command": "/opt/parsec/run.sh"
        },
        {
            "name": "bodytrack",
            "guest-init": "prepareGuest.sh /opt/parsec --wrapper time --wrapper pmapelf --input simsmall -- bodytrack",
            "command": "/opt/parsec/run.sh"
        },
        {
            "name": "canneal",
            "guest-init": "prepareGuest.sh /opt/parsec --wrapper time --wrapper pmapelf --input simsmall -- canneal",
            "command": "/opt/parsec/run.sh"
        },
        {
            "name": "fluidanimate",
            "guest-init": "prepareGuest.sh /opt/parsec --wrapper time --wrapper pmapelf --input simsmall -- fluidanimate",
            "command": "/opt/parsec/run.sh"
        },
        {
            "name": "freqmine",
            "guest-init": "prepareGuest.sh /opt/parsec --wrapper time --wrapper pmapelf --input simsmall -- freqmine",
            "command": "/opt/parsec/run.sh"
        },
        {
            "name": "swaptions",
            "guest-init": "prepareGuest.sh /opt/parsec --wrapper time --wrapper pmapelf --input simsmall -- swaptions",
            "command": "/opt/parsec/run.sh"
        },
        {
            "name": "x264",
            "guest-init": "prepareGuest.sh /opt/parsec --wrapper time --wrapper pmapelf --input simsmall -- x264",
            "command": "/opt/parsec/run.sh"
        },
        {
            "name": "streamcluster",
            "guest-init": "prepareGuest.sh /opt/parsec --wrapper time --wrapper pmapelf --input simsmall -- streamcluster",
            "command": "/opt/parsec/run.sh"
        }
    ]
}
