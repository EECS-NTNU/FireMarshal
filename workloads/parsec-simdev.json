{
    "name": "parsec-simdev",
    "base": "parsec.json",
    "workdir": "common",
    "guest-init": "prepareGuest.sh /opt/parsec --suite parsec --input simdev",
    "rootfs-size": "0",
    "outputs": [  "/opt/parsec/output" ],
    "jobs": [
        {
            "name": "blackscholes",
            "guest-init": "prepareGuest.sh /opt/parsec --wrapper time --wrapper pmapelf --input simdev -- blackscholes",
            "command": "/opt/parsec/run.sh"
        },
        {
            "name": "bodytrack",
            "guest-init": "prepareGuest.sh /opt/parsec --wrapper time --wrapper pmapelf --input simdev -- bodytrack",
            "command": "/opt/parsec/run.sh"
        },
        {
            "name": "canneal",
            "guest-init": "prepareGuest.sh /opt/parsec --wrapper time --wrapper pmapelf --input simdev -- canneal",
            "command": "/opt/parsec/run.sh"
        },
        {
            "name": "fluidanimate",
            "guest-init": "prepareGuest.sh /opt/parsec --wrapper time --wrapper pmapelf --input simdev -- fluidanimate",
            "command": "/opt/parsec/run.sh"
        },
        {
            "name": "freqmine",
            "guest-init": "prepareGuest.sh /opt/parsec --wrapper time --wrapper pmapelf --input simdev -- freqmine",
            "command": "/opt/parsec/run.sh"
        },
        {
            "name": "swaptions",
            "guest-init": "prepareGuest.sh /opt/parsec --wrapper time --wrapper pmapelf --input simdev -- swaptions",
            "command": "/opt/parsec/run.sh"
        },
        {
            "name": "x264",
            "guest-init": "prepareGuest.sh /opt/parsec --wrapper time --wrapper pmapelf --input simdev -- x264",
            "command": "/opt/parsec/run.sh"
        },
        {
            "name": "streamcluster",
            "guest-init": "prepareGuest.sh /opt/parsec --wrapper time --wrapper pmapelf --input simdev -- streamcluster",
            "command": "/opt/parsec/run.sh"
        }
    ]
}
